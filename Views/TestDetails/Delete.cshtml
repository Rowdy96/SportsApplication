@model SportsApp.Models.TestDetails

@{
    ViewData["Title"] = "Delete";
}

<div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>CONFIRM</h2>
        <h4>Do you want to delete this athlete from the test?</h4>
        <hr />
        <form asp-action="Delete">
            <input type="hidden" asp-for="AthleteId" />
            <a class="btn btn-default" asp-action="Index" asp-route-id="@Model.TestId">No</a>
            <input type="submit" value="Delete" class="btn btn-default"/>
        </form>
    </div>
<div class="col-md-3"></div>