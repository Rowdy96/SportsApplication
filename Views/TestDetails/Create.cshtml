@model SportsApp.Models.TestDetails

@{
    ViewData["Title"] = "Create";
}




<div class="col-md-3"></div>

    <div class="col-md-6">
        <form asp-action="Create">
            <h3>ADD NEW ATHLETE TO TEST</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AthleteName" class="control-label"></label>
                <Select asp-for="AthleteName" class="form-control">
                    <option value="Queen Jacobi">Queen Jacobi</option>
                    <option value="Magen Faye">Magen Faye</option>
                    <option value="Delicia Ledonne">Delicia Ledonne</option>
                    <option value="Camille Grantham">Camille Grantham</option>
                    <option value="Marc Voth">Marc Voth</option>
                    <option value="Randy Rondon">Randy Rondon</option>
                    <option value="Delora Saville">Delora Saville</option>
                    <option value="Rosario Reuben">Rosario Reuben</option>
                    <option value="Lula Uhlman">Lula Uhlman</option>
                </Select>
                <span asp-validation-for="AthleteName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Distance" class="control-label"></label>
                <input asp-for="Distance" class="form-control" value=0 />
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            <div>
                <a asp-controller="TestDetails" asp-action="Index" asp-route-id="@ViewData["id"]">Back to athlete list</a>
            </div>
        </form>
    </div>

<div class="col-md-3"></div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
